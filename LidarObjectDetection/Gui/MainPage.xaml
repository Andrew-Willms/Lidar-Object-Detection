<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:gui="clr-namespace:Gui"
			 x:Class="Gui.MainPage"
			 x:DataType="gui:MainPage">

	<ScrollView>
		<VerticalStackLayout
			Padding="30,0"
			Spacing="25">

			<Border 
				Stroke="AliceBlue"
				StrokeThickness="3">

				<GraphicsView Drawable="{Binding GraphicsManager, Mode=OneWay}"/>
				
			</Border>

		</VerticalStackLayout>
	</ScrollView>

</ContentPage>